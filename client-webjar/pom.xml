<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>za.co.absa.spline</groupId>
        <artifactId>parent</artifactId>
        <relativePath>../parent/pom.xml</relativePath>
        <version>0.4.1-SNAPSHOT</version>
    </parent>

    <groupId>org.webjars</groupId>
    <artifactId>absaoss-spline-client</artifactId>
    <name>${project.artifactId}</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <zip.groupId>za.co.absa.spline</zip.groupId>
        <zip.artifactId>client-ui</zip.artifactId>
        <zip.classifier>dist</zip.classifier>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${zip.groupId}</groupId>
            <artifactId>${zip.artifactId}</artifactId>
            <classifier>${zip.classifier}</classifier>
            <type>zip</type>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.1</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <artifactItems>
                        <artifactItem>
                            <groupId>${zip.groupId}</groupId>
                            <artifactId>${zip.artifactId}</artifactId>
                            <classifier>${zip.classifier}</classifier>
                            <version>${project.version}</version>
                            <type>zip</type>
                        </artifactItem>
                    </artifactItems>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="unzip archive" />
                                <unzip src="${project.build.directory}/dependency/${zip.artifactId}-${project.version}-${zip.classifier}.zip" dest="${project.build.directory}/${project.artifactId}-${project.version}" />
                                <echo message="moving resources" />
                                <move todir="${project.build.outputDirectory}/META-INF/resources/webjars/${project.artifactId}/${project.version}">
                                    <fileset dir="${project.build.directory}/${project.artifactId}-${project.version}" />
                                </move>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>