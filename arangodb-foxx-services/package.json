  "private": true,
  "scripts": {
    "build": "tsc",
    "postbuild": "copyfiles --up 2 src/main/*.json src/main/**/*.json target/dist",
    "test": "jest",
    "lint": "eslint src",
    "foxx:deploy": "npm run build && npm run foxx:uninstall && npm run foxx:install",
    "foxx:uninstall": "foxx uninstall --server $npm_config_server --database $npm_config_database /spline",
    "foxx:install": "foxx install --server $npm_config_server --database $npm_config_database /spline target/dist"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.13",
    "@types/jest": "^28.1.5",
    "@types/node": "^13.13.52",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "foxx-cli": "^2.0.1",
    "jest": "^28.1.2",
    "joi": "^17.6.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
