{
  "name": "spline_foxx_services",
  "version": "1.0.0-SNAPSHOT",
  "license": "Apache-2.0",
  "copyright": "2022 ABSA Group Limited",
  "private": true,
  "scripts": {
    "postinstall": "sync-pom-version",
    "build": "tsc",
    "postbuild": "npm run postbuild:copy && npm run postbuild:templates",
    "postbuild:copy": "copyfiles --up 1 src/assets/*  target/dist",
    "postbuild:templates": "npm run postbuild:templates:copy && npm run postbuild:templates:replace && npm run postbuild:templates:move && npm run postbuild:templates:cleanup",
    "postbuild:templates:copy": "copyfiles --up 1 src/*.json src/README* target/dist/templates",
    "postbuild:templates:replace": "npm run postbuild:templates:replace:version && npm run postbuild:templates:replace:revision && npm run postbuild:templates:replace:timestamp",
    "postbuild:templates:replace:version": "cross-env-shell replace '@VERSION@' $npm_package_version './target/dist/templates' -r",
    "postbuild:templates:replace:revision": "cross-env-shell replace '@REVISION@' $SPLINE_BUILD_REVISION ./target/dist/templates -r",
    "postbuild:templates:replace:timestamp": "cross-env-shell replace '@BUILD_TIMESTAMP@' $SPLINE_BUILD_TIMESTAMP ./target/dist/templates -r",
    "postbuild:templates:move": "copyfiles --up 3 target/dist/templates/* target/dist",
    "postbuild:templates:cleanup": "rimraf target/dist/templates",
    "test": "jest",
    "lint": "eslint src",
    "foxx:deploy": "npm run build && npm run foxx:uninstall && npm run foxx:install",
    "foxx:uninstall": "cross-env-shell foxx uninstall --server $npm_config_server --database $npm_config_database /spline",
    "foxx:install": "cross-env-shell foxx install --server $npm_config_server --database $npm_config_database /spline target/dist"
  },
  "devDependencies": {
    "@types/arangodb": "^3.5.13",
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "foxx-cli": "^2.0.1",
    "jest": "^28.1.2",
    "joi": "^17.6.0",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "sync-pom-version-to-package": "^1.6.1",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
